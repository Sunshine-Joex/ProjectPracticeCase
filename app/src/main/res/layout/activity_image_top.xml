<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.example.sunshine.ImageTopActivity">


    <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:indicatorPaddingLeft="10dp"
        app:middle_page_cover="false"
        app:open_mz_mode="true" />

    <cn.example.sunshine.widget.MarqueeView
        android:id="@+id/marqueeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:mvAnimDuration="800"
        app:mvInterval="1500"
        app:mvTextColor="@android:color/holo_red_dark"
        app:mvTextSize="12sp" />

    <FrameLayout
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp">

        <cn.example.sunshine.widget.ArcSeekBar
            android:id="@+id/arc_seek_bar"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:padding="10dp"
            app:arc_border_color="@android:color/white"
            app:arc_border_width="0dp"
            app:arc_colors="@array/colors_default"
            app:arc_max="49"
            app:arc_open_angle="90"
            app:arc_progress="0"
            app:arc_rotate_angle="-45"
            app:arc_thumb_color="#EA5B51"
            app:arc_thumb_mode="FILL"
            app:arc_thumb_radius="5dp"
            app:arc_un_color="#aaaaaa"
            app:arc_thumb_shadow_color="#BDEA5B51"
            app:arc_thumb_shadow_radius="3dp"
            app:arc_width="4dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark"

            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="50000"

            android:textColor="#ffffffff"
            android:textSize="30sp" />
    </FrameLayout>

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="禁选" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启" />


