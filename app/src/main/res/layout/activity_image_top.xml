<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.example.sunshine.ImageTopActivity">


        <com.zhouwei.mzbanner.MZBannerView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:canLoop="true"
            app:indicatorAlign="center"
            app:open_mz_mode="true"
            android:visibility="gone"
            app:middle_page_cover="false"
            app:indicatorPaddingLeft="10dp"
            />

        <cn.example.sunshine.widget.MarqueeView
            android:id="@+id/marqueeview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mvAnimDuration="800"
            app:mvInterval="1500"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            app:mvTextColor="@android:color/holo_red_dark"
            app:mvTextSize="12sp" />

        <com.gcssloop.widget.ArcSeekBar
            android:id="@+id/arc_seek_bar"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:arc_colors="@array/colors_default"
            app:arc_max="100"
            app:arc_open_angle="90"
            app:arc_progress="0"
            app:arc_rotate_angle="-45"
            app:arc_thumb_color="#fff"
            app:arc_thumb_mode="FILL"
            app:arc_thumb_radius="5dp"
            app:arc_thumb_width="1dp"
            app:arc_thumb_shadow_radius="3dp"
            app:arc_thumb_shadow_color="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:arc_width="4dp"/>
